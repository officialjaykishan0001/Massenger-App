<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>QuickChat - Quick Path to connect</title>
  <!-- <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet"> -->
</head>
<body class="bg-gray-100">

  <!-- Chat Container -->
  <div class="chat-container w-[100vw] h-[100vh] mx-auto  bg-white shadow-lg rounded-lg">
    
    <!-- Header -->
    <div class="chat-header bg-blue-600 text-white p-4 rounded-t-lg flex items-center justify-between">
      <div class="header-info flex items-center">
        <img src="/images/round-gradient-designify (1).png" alt="Avatar" class="rounded-full w-10 h-10">
        <div class="ml-3">
          <h2 class="font-bold text-lg">Chat with Alice</h2>
          <p class="text-sm">Online</p>
        </div>
      </div>
      <div class="header-actions">
        <button class="p-2 rounded-full bg-blue-500 hover:bg-blue-700 focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4h16M4 12h16M4 20h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Messages -->
    <div class="chat-messages p-4 h-[80%]  overflow-y-auto">
      <!-- Message from others -->
      <!-- <div class="message received mb-4 flex items-start">
        <img src="/images/round-gradient-designify (1).png" alt="Avatar" class="rounded-full w-10 h-10">
        <div class="message-content ml-3 bg-gray-200 p-3 rounded-lg">
          <p class="text-sm">Hi there! How are you doing today?</p>
          <span class="text-xs text-gray-500">10:30 AM</span>
        </div>
      </div> -->
      <!-- Message from user -->
      <!-- <div class="message sent mb-4 flex items-end justify-end">
        <div class="message-content bg-blue-500 text-white p-3 rounded-lg">
          <p class="text-sm">I'm doing great, thanks! How about you?</p>
          <span class="text-xs text-gray-200">10:32 AM</span>
        </div>
        <img src="/images/round-gradient-designify (1).png" alt="Avatar" class="rounded-full w-10 h-10 ml-3">
      </div> -->
      <!-- More messages -->
    </div>

    <!-- Input -->
    <div class="chat-input bg-gray-100 p-4 rounded-b-lg border-t border-gray-200 flex items-center">
      <input type="text" placeholder="Type a message..." class="input-message flex-grow p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      <button class="ml-3 p-2 rounded-full bg-blue-500 hover:bg-blue-700 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="button h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/index.js"></script>
</body>
</html>
